@import '../../common/style/mixin.styl';
@import '../../common/style/variable.styl';

html {
  background-color: $pageBgc;
}

.basic-layout {
  min-width: 1000px;

  header {
    mx_wh(100%, $headerHeight);
  }

  footer {
    mx_wh(100%, $footerHeight);
  }

  #main {
    display: flex;
    background-color: $pageBgc;
    overflow: auto;
    width: 100%;
    height: calc(100vh - 30px - 60px);
  }

  .content {
    flex: 1;
    box-sizing: border-box;
    overflow-x: hidden;
    overflow-y: auto;
    position: relative;
  }
}
